{
  "manifest_version": 3,
  "name": "BlockHub",
  "version": "0.4.0",
  "description": "BlockHub blocks ads, cookie banners, AI widgets, and hides AI-related terms across the web. Clean, fast, and free.",
  "minimum_chrome_version": "114",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "scripting",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/shared.js",
        "content/blocking_engine.js",
        "content/killlist_blocker.js",
        "content/cookies.js",
        "content/ai_widgets.js",
        "content/ai_terms.js",
        "content/ad_overlay_blocker.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_origin_as_fallback": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads_static",
        "enabled": true,
        "path": "rules/ads_static.json"
      },
      {
        "id": "trackers_static",
        "enabled": true,
        "path": "rules/trackers_static.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*", "utils/kill_list.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

